<% include ./partials/header%>

<div class="container">
  <%if(products === null){%>
    <div class="row">
        <div class="col-md-12">
            <div class="error-temp">
                <h1>
                    Oops!</h1>
                <h2>
                    Cart Is Empty</h2>

                <div class="error-actions">
                    <a href="/" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        Take Me Home </a>
                </div>
            </div>
        </div>
    </div>
  <%}else{%>
</div>
<div class="container">
  <%if(mess){%>
  <div class="alert alert-danger">
    <%=mess%>
  </div>
  <%}%>
  <%if(success){%>
  <div class="alert alert-success">
    <%=success%>
  </div>
  <%}%>
  <table id="cart" class="table table-hover table-condensed">
    				<thead>
						<tr>
							<th style="width:50%">Product</th>
							<th style="width:10%">Price</th>
							<th style="width:8%">Quantity</th>
							<th style="width:22%" class="text-center">Subtotal</th>
							<th style="width:10%"></th>
						</tr>
					</thead>
          <%for(product of products){%>
					<tbody>
						<tr>
							<td data-th="Product">
								<div class="row">
									<div class="col-sm-2 hidden-xs"><img src="<%=product.image%>" alt="..." class="img-responsive"/></div>
									<div class="col-sm-10">
										<h4 class="nomargin"><%=product.item.title%></h4>
										<p><%product.item.content.substr(10)%></p>
									</div>
								</div>
							</td>
							<td data-th="Price">Rs <%=product.item.discountedPrice%></td>
							<td data-th="Quantity">
                <form action="/change/<%=product.item._id%>" method="get">
								<input name="change" type="number" class="form-control text-center" value="<%=product.qty%>">

							</td>
							<td data-th="Subtotal" class="text-center"><%=product.price%></td>
							<td class="actions" data-th="">
								<button type="submit" class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button></form>
								<a href="/delete/<%=product.item._id%>" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></a>
							</td>
						</tr>
					</tbody>
          <%}%>
					<tfoot>
						<tr class="visible-xs">
							<td class="text-center"><strong>Total Rs<%=totalPrice%></strong></td>
						</tr>
						<tr>
							<td><a href="/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
							<td colspan="2" class="hidden-xs"></td>
							<td class="hidden-xs text-center"><strong>Total Rs  <%=totalPrice%></strong></td>
							<td><a href="/user/checkout" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
						</tr>
					</tfoot>
				</table>
</div>
<%}%>



<% include ./partials/footer %>
